<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/item1upgrade1"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_rowSpan="2"
            android:layout_columnSpan="2"
            android:background="@drawable/item1upgrade1"
            android:clickable="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="10"
            android:id="@+id/price11"
            android:layout_row="2"
            android:layout_column="1"
            android:editable="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="1 K"
            android:id="@+id/price21"
            android:layout_row="2"
            android:layout_column="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="5 K"
            android:id="@+id/price31"
            android:layout_row="2"
            android:layout_column="3" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/item1upgrade2"
            android:layout_row="3"
            android:layout_column="1"
            android:background="@drawable/item1upgrade2" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/item2upgrade2"
            android:layout_row="3"
            android:layout_column="2"
            android:background="@drawable/item2upgrade2" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/item3upgrade2"
            android:layout_row="3"
            android:layout_column="3"
            android:background="@drawable/item3upgrade2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="2.5 K"
            android:id="@+id/price12"
            android:layout_row="4"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="15 K"
            android:id="@+id/price22"
            android:layout_row="4"
            android:layout_column="2" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/item1upgrade3"
            android:layout_row="5"
            android:layout_column="1"
            android:background="@drawable/item1upgrade3" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/item2upgrade3"
            android:layout_row="5"
            android:layout_column="2"
            android:background="@drawable/item2upgrade3" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/item2upgrade1"
            android:layout_row="1"
            android:layout_column="2"
            android:background="@drawable/item2upgrade1" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/item3upgrade1"
            android:layout_row="1"
            android:layout_column="3"
            android:contextClickable="true"
            android:cropToPadding="false"
            android:focusable="true"
            android:focusableInTouchMode="false"
            android:background="@drawable/item3upgrade1" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/item3upgrade3"
            android:layout_row="5"
            android:layout_column="3"
            android:background="@drawable/item3upgrade3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="150 K"
            android:id="@+id/price13"
            android:layout_row="6"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="250 K"
            android:id="@+id/price23"
            android:layout_row="6"
            android:layout_column="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="500 K"
            android:id="@+id/price33"
            android:layout_row="6"
            android:layout_column="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="100 K"
            android:id="@+id/price32"
            android:layout_row="4"
            android:layout_column="3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/mBackToGame"
            android:layout_row="7"
            android:layout_column="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/mCurrency"
            android:layout_row="8"
            android:layout_column="2"
            android:text="Your Currency:" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/mCurrency2"
            android:layout_row="9"
            android:layout_column="2" />

    </GridLayout>
</LinearLayout>